<!DOCTYPE html>
<html>
<head>
  <title>Ecatalog</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar">
    <div class="navbar-inner">
      <div class="container" >
        <a class="brand" href="#">
          eCatalog
        </a>
        <% if current_user %>
        <ul class="nav" />
          <li><%=link_to 'Acasa' , login_index_path %></li>
          <li><%=link_to 'Materii' , courses_path %></li>
          <li><%=link_to 'Elevi' , students_path %></li>
        </ul>
        <ul class="nav pull-right">
          <li class="divider-vertical"></li>
          <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" > <%= current_user.name %> </a>
          <ul class="dropdown-menu">
            <a href="/">Settings</a>
            <a href="/logout">Logout</a>
          </ul>
          </li>
        </ul>
      <%end%>
      </div>
    </div>
  </div>
  <div class="container">
  <%= yield %>
  </div>
</body>
</html>
