<%= form_for @user ,:action => :create,:controller => 'LoginController' ,:method => 'post' do |f| %>
    <%= f.label "Nume" %><br />
    <%= f.text_field :name %>
    <%= f.label "Email" %><br />
    <%= f.text_field :email %>
    <%= f.label "Parola" %><br />
    <%= f.password_field :password %>
    <%= f.label "Confirmare Parola" %><br />
    <%= f.password_field :password_confirmation%>
  <div class="actions">
    <%= submit_tag "Inregistrare" , :class => 'btn btn-success'%>
  </div>
<%end%>
